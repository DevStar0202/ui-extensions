[
    {
        "type": "textfield",
        "properties": {
            "label": "alert message",
            "onChange": {
                "type": "lambda",
                "arg": "$value",
                "action": {
                    "type": "set",
                    "key": "alert_message",
                    "value": "$value"
                }
            }
        }
    },
    {
        "type": "button",
        "properties": {
            "label": "Alert",
            "onClick": {
                "type": "lambda",
                "arg": "",
                "action": {
                    "type": "alert",
                    "properties": {
                        "message": {
                            "type": "get",
                            "key": "alert_message"
                        }
                    }
                }
            }
        }
    }
]
